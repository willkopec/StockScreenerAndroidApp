<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idRLContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6B1fA"
    tools:context=".StockListViewPage">

    <TextView
        android:id="@+id/resultsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results:"
        android:textColor="#1f2ed1"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"/>

    <!--button for adding item from edit text to list-->
    <Button
        android:id="@+id/scanAgainBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="270dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="4dp"
        android:text="Scan Again"
        android:textAllCaps="false" />

    <!--list view to display list of languages-->
    <ListView
        android:id="@+id/stockListVieww"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scanAgainBtn"
        android:background="@color/white" />
</RelativeLayout>